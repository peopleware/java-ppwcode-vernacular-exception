  <!-- see http://maven.apache.org/reference/plugins/changes/ for documentation -->
  <!-- There are four valid values for action type:  add, fix, remove, update. -->

  <properties>
    <title>Changes to ppwcode exception vernacular</title>
    <author email="Jan_Dockx@peopleware.be">Jan Dockx</author>
    <author email="Nele_Smeets@peopleware.be">Nele Smeets</author>
  </properties>
  <body>

    <release version="IV v1.0" date="2016-07-11" description="revival">
      <action dev="jand" type="update">
        Everything is changed. This revives this code base after almost 8 years.
        Java is now at version 8.
      </action>
    </release>

    <release version="III v1.1" date="2008-12-18" description="more recent parent pom">
      <action dev="jand" type="update">
        use more recent version of parent pom
      </action>
    </release>
    <release version="III v1.0" date="2008-12-18" description="name changes and handling">
      <action dev="jand" type="remove">
        Split ProgrammingErrorHelpers and ExceptionHelpers into ppwcode util exception.
      </action>
      <action dev="jand" type="update">
        Changed the name of InternalException to ApplicationException. Application exception
        is a name used in JavaEE documentation. Like this, there will be less confusion.
      </action>
    </release>

    <release version="II v5.0" date="2008-10-09" description="Extra method in ProgrammingErrorHelpers">
      <action dev="jand" type="add">
        ProgrammingErrorHelpers.newAssertionError is now public.
      </action>
    </release>

    <release version="II v4.0" date="2008-10-09" description="NoLongerSupportedError">
      <action dev="jand" type="add">
        Added NoLongerSupportedError.
      </action>
    </release>

    <release version="II v3.0" date="2008-10-06" description="InternalTransportException">
      <action dev="jand" type="add">
        Added InternalTransportException.
      </action>
    </release>

    <release version="II v1.1" date="2008-10-03" description="ExceptionHelpers">
      <action dev="jand" type="add">
        Added ExceptionHelpers, with helper methods for throwables. This code
        was recovered from earlier versions of ppw-persistence.
      </action>
    </release>

    <release version="II v1.0" date="2008-10-01" description="Brand new release">
      <action dev="jand" type="update">
        This version is a total rewrite of the previous version.
        The vernacular is worked out and explanained. The overview document is
        not finished.
      </action>
    </release>

    <release version="I v1.0.0/2.0" date="2005-08-14" description="Dependencies">
      <action dev="jand" type="update">
        Updated dependencies.
      </action>
    </release>

    <release version="I v1.0.0/1.0" date="2004-12-20" description="First release">
      <action dev="jand" type="add">
        First release with this version number scheme.
      </action>
    </release>

  </body>
</document>
